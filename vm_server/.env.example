# Environment Variables for Lina Serendipity MCP Server
# =======================================================
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: The server has hardcoded fallbacks for debugging,
# but you should set real values here for production use!
# =======================================================

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host (default: 0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# Log level: debug, info, warning, error (default: info)
LOG_LEVEL=info

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================

# MCP server display name
MCP_SERVER_NAME=Lina Serendipity MCP Server

# Systemd service name (for admin tools)
MCP_SERVICE_NAME=mcp-server.service

# ============================================================================
# NOTION INTEGRATION
# ============================================================================

# Notion API token (get from https://www.notion.so/my-integrations)
# Format: secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_TOKEN=your_notion_integration_token_here

# Notion Pantry Database ID
# Find in Notion URL: https://notion.so/yourworkspace/DATABASE_ID?v=...
PANTRY_DB_ID=your_pantry_database_id_here

# ============================================================================
# PANTRY PROPERTY MAPPINGS (Optional - defaults provided)
# ============================================================================
# These map to your Notion database property names
# Only set if your property names differ from defaults

# PANTRY_PROP_NAME=Item Name
# PANTRY_PROP_QUANTITY=Quantity
# PANTRY_PROP_UNIT=Unit
# PANTRY_PROP_CATEGORY=Food Category
# PANTRY_PROP_PURCHASE_DATE=Purchase Date
# PANTRY_PROP_STORE=Store
# PANTRY_PROP_PRICE=Price
# PANTRY_PROP_EXPIRATION_DATE=Expiration Date
# PANTRY_PROP_STORAGE_LOCATION=Storage Location
# PANTRY_PROP_NOTES=Notes
# PANTRY_PROP_RECEIPT_NUMBER=Receipt Number
# PANTRY_PROP_STATUS=Status
# PANTRY_PROP_REPLENISH=Replenish

# ============================================================================
# SERENDIPITY / n8n INTEGRATION
# ============================================================================

# n8n webhook URL for serendipity events
# Format: http://your-n8n-instance:5678/webhook/serendipity-event
SERENDIPITY_EVENT_WEBHOOK_URL=http://localhost:5678/webhook/serendipity-event

# ============================================================================
# ADMIN TOOLS AUTHENTICATION
# ============================================================================

# Admin token for sensitive operations (restart, logs, etc.)
# Generate a strong random token: openssl rand -hex 32
ADMIN_TOKEN=your_secure_admin_token_here

# ============================================================================
# DEBUG MODE
# ============================================================================

# Enable debug mode for verbose logging (true/false)
# DEBUG_MODE=false

# ============================================================================
# NOTES
# ============================================================================
# 
# SECURITY:
# - Never commit .env file to version control
# - Keep secrets secure and rotate them regularly
# - Use strong, unique tokens for ADMIN_TOKEN
# - Restrict Notion integration permissions to minimum required
# 
# HARDCODED FALLBACKS:
# - The server has debug fallback values for all variables
# - These allow the server to start without any .env file
# - Fallbacks are clearly marked as "debug-" values
# - Tools will work in "demo mode" with fallbacks
# - For production, ALWAYS set real values!
# 
# TESTING:
# - You can run the server with NO .env file for testing
# - Check startup logs to see which values are hardcoded
# - Tools will indicate when using debug/fallback values
# ============================================================================
